{
  "$schema": "https://json.schemastore.org/prettierrc",
  "trailingComma": "none",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "overrides": [
    {
      "files": "**/*.sol",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "**/*.svg",
      "options": {
        "parser": "html"
      }
    }
  ]
}
